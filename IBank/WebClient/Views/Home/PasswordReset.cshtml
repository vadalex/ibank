@using Model = WebClient.Models;

@model Model.PasswordResetModel

@{
    ViewBag.Title = "Сброс пароля";
    Layout = "~/Views/Shared/_MainLayoutPage.cshtml";
}

<div class="password-reset-container">

    <div style="margin-bottom: 20px">
        <span class="hello-text">Смена пароля</span>
    </div>

    @using (Html.BeginForm("PasswordReset", "Home"))
    {
        @Html.AntiForgeryToken()

        <div class="form-horizontal">
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            <div class="form-group">
                <span class="message">Текущий пароль</span>
                <div class="col-md-10">
                    @Html.ValidationMessageFor(model => model.OldPassword, "", new { @class = "text-danger" })
                    <br />
                    @Html.EditorFor(model => model.OldPassword, new { htmlAttributes = new { @class = "form-control" } })
                </div>
            </div>

            <div class="form-group">
                <span class="message">Новый пароль</span>
                <div class="col-md-10">
                    @Html.ValidationMessageFor(model => model.NewPassword, "", new { @class = "text-danger" })
                    <br />
                    @Html.EditorFor(model => model.NewPassword, new { htmlAttributes = new { @class = "form-control" } })
                </div>
            </div>

            <div class="form-group">
                <span class="message">Подтвердите новый пароль</span>
                <div class="col-md-10">
                    @Html.ValidationMessageFor(model => model.ConfirmPassword, "", new { @class = "text-danger" })
                    <br />
                    @Html.EditorFor(model => model.ConfirmPassword, new { htmlAttributes = new { @class = "form-control" } })
                </div>
            </div>

            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" style="width: 446px; margin-top: 20px" value="Сохранить" class="btn btn-default" />
                </div>
            </div>
        </div>
    }

</div>


