<Window x:Class="UIControlLibrary.Components.BankAccountDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Выберите действие" Height="500" Width="500"
		
		xmlns:co="clr-namespace:UIControlLibrary.Components"
		
		ResizeMode="CanResizeWithGrip"
		ShowInTaskbar="False"
		WindowStartupLocation="CenterOwner"
		>

	<Window.Resources>
		<ResourceDictionary>
			<ResourceDictionary.MergedDictionaries>
				<ResourceDictionary Source="pack://application:,,,/UIControlLibrary;component/Sources/Styles.xaml" />
			</ResourceDictionary.MergedDictionaries>
		</ResourceDictionary>

	</Window.Resources>

	<ScrollViewer>
		
		<StackPanel>
		
			<co:Message x:Name="UIMessage"/>
		
			<Button Content="Пополнить банк-счет" Click="Button_Click"/>
			<Button Content="Перейти к регистрации карт-счета" Click="Button_Click_1"/>
			<Button Content="Зарегистрировать другой банк-счет" Click="Button_Click_2"/>
			<Button Content="Перейти к простмотру информации о пользователе" Click="Button_Click_3"/>
        
		</StackPanel>
		
	</ScrollViewer>
</Window>
