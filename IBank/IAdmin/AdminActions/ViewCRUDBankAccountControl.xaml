<UserControl x:Class="IAdmin.AdminActions.ViewCRUDBankAccountControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
			 
			 xmlns:aa="clr-namespace:IAdmin.AdminActions"
			 
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
	
	
    <StackPanel>
		
		<TextBlock VerticalAlignment="Center" HorizontalAlignment="Center" Margin="10">Изменение / Добавление / Удаление банк-счета</TextBlock>
		
		<TabControl>
			
			<TabItem Header="Изменить">
				<aa:EditBankAccountControl x:Name="UIBankAccountEdit"/>
			</TabItem>
			
			<TabItem Header="Создать">
				<aa:EditBankAccountControl x:Name="UIBankAccountCreate"/>
			</TabItem>
			
			<TabItem Header="Удалить">
				<aa:EditBankAccountControl x:Name="UIBankAccountRemove"/>
			</TabItem>
			
		</TabControl>		
		
		
            
    </StackPanel>
	
	
</UserControl>
