<UserControl x:Class="IAdmin.AdminActions.ViewCRUDCardAccountControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:aa="clr-namespace:IAdmin.AdminActions"
			 
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">


	<StackPanel>

		<TextBlock VerticalAlignment="Center" HorizontalAlignment="Center" Margin="10">Изменение / Добавление / Удаление карт-счета</TextBlock>

		<TabControl>

			<TabItem Header="Изменить">
				<aa:EditCardAccountControl x:Name="UIEdit"/>
			</TabItem>

			<TabItem Header="Создать">
				<aa:EditCardAccountControl x:Name="UICreate"/>
			</TabItem>

			<TabItem Header="Удалить">
				<aa:EditCardAccountControl x:Name="UIRemove"/>
			</TabItem>

		</TabControl>



	</StackPanel>
</UserControl>
